<project name="streamsx.topology.python" default="all" >
    <description>
        Build the streamsx.topology Python doc.
    </description>

  <import file="../common-build.xml"/>
  <property name="py.doc" location="${tk.doc}/pythondoc"/>
  <property name="sphinx.dir" location="sphinx"/>

  <target name="all">
   <mkdir dir="${py.doc}"/>
   <exec executable="sphinx-apidoc"
         dir="${sphinx.dir}" failonerror="true">
     <arg value="-o"/>
     <arg value="source"/>
     <arg value="${tk}/opt/python/packages"/>

     <!-- excluded packages -->
     <arg value="source/streamsx/topology/condapkgs.py"/>
     <arg value="source/streamsx/topology/runtime.py"/>
     <arg value="source/streamsx/topology/splpy_setup.py"/>
   </exec>

   <exec executable="make"
         dir="${sphinx.dir}" failonerror="true">
     <arg value="html"/>
   </exec>
   <copy todir="${py.doc}">
     <fileset dir="${sphinx.dir}/build/html"/>
   </copy>

   </target>

  <target name="clean">
    <delete dir="${pydoc}"/>
    <delete dir="${sphinx.dir}/build"/>
    <delete>
     <fileset dir="${sphinx.dir}/source"
       includes="*.rst"
       excludes="index.rst"/>
   </delete>
  </target>
</project>
