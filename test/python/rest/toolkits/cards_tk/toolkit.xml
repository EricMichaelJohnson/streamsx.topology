<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<toolkitModel xmlns="http://www.ibm.com/xmlns/prod/streams/spl/toolkit" productVersion="4.2.0.2" xmlns:common="http://www.ibm.com/xmlns/prod/streams/spl/common" xmlns:ti="http://www.ibm.com/xmlns/prod/streams/spl/toolkitInfo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <toolkit name="com.example.cards" requiredProductVersion="4.2" version="1.0.0">
    <description>Toolkit for dealing decks of cards.</description>
    <uriTable>
      <uri index="2" value="opt/.splpy/icons/python-powered16.gif"/>
      <uri index="1" value="com.example.cards/deal"/>
      <uri index="3" value="opt/.splpy/icons/python-powered32.gif"/>
    </uriTable>
    <namespace name="com.example.cards">
      <primitiveOp language="Cpp" modelUriIndex="1" name="deal" public="true">
        <description>
Callable: deal

# Python
    @spl.source()
    def deal():
        deck = list(range(0,52))
        while True:
          random.shuffle(deck)
          for card in deck:
            suit = int(card / 13)
            value = card % 13
            suits = ['spades','hearts','clubs','diamonds']
            values = ['ace','deuce','three','four','five','six','seven','eight','nine','ten','jack','queen','king']
            yield 'the ' + values [value] + ' of ' + suits [suit]

      </description>
        <images>
          <image size="16" uriIndex="2"/>
          <image size="32" uriIndex="3"/>
        </images>
        <outputPort expressionMode="Nonexistent" maxNumPorts="1" minNumPorts="1" optional="false" windowPunctOutputMode="Free"/>
      </primitiveOp>
    </namespace>
    <sabFiles>
      <ti:include path="toolkit.xml" root="toolkitDir"/>
